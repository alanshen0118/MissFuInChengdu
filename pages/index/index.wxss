/**index.wxss**/

#container{
    margin-top: 20px;
}

.slide-image{
    display: block;
    height: 150px;
    width: 100%;
}

.awesomeFood-collectionView{
    height: 100px;
    display:flex;
    background-color: #FFFFFF;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.flex-item{
    width: 40%;
    height: 150px;
}

.awesomeFood-image{
    width: 100%;
    height: 100px;
}

.awesomeFood-title{
    font-size: 16px;
    color: red;
    font-weight: bold;
}

.section-Header{
    padding-bottom: 10px;
    border-bottom: 1px dashed #666666;
    
}

#awesomeFood-Icon{
    margin-left: 10px;
    margin-top: 10px;  
    width: 20px;
    height: 20px;
}

.awesomeFood-name{
    color: orangered;
    width:100%;
    display: block;
    font-size: 14px;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.awesomeFood-desc{
    width:100%;
    display: block;
    font-size: 12px;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
