/**index.wxss**/

#container{
    margin-top: 40rpx;
}

.slide-image{
    display: block;
    height: 300rpx;
    width: 100%;
}

.awesomeFood-collectionView{
    height: 200rpx;
    display:flex;
    background-color: #FFFFFF;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.flex-item{
    width: 40%;
    height: 300rpx;
}

.awesomeFood-image{
    width: 100%;
    height: 200rpx;
}

.awesomeFood-title{
    font-size: 32rpx;
    color: red;
    font-weight: bold;
}

.section-Header{
    padding-bottom: 20rpx;
    border-bottom: 2rpx dashed #666666;
    
}

#awesomeFood-Icon{
    margin-left: 20rpx;
    margin-top: 20rpx;  
    width: 40rpx;
    height: 40rpx;
}

.awesomeFood-name{
    color: orangered;
    width:100%;
    display: block;
    font-size: 28rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.awesomeFood-desc{
    width:100%;
    display: block;
    font-size: 24rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
