/*stepper容器*/
.stepper {
    width: 70px;
    height: 20px;
    float: right;
    margin-right: 10px;
}

/*数值*/
.stepper text {
    float: left;
    width: 30px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    font-size: 12px;
}

.stepper image {
    width: 20px;
    height: 20px;
    float: left;
}

/*普通样式*/
.stepper .normal {
    visibility: visible;
}

/*禁用样式*/
.stepper .disabled {
    visibility: hidden;
}

#left-menu-tableView {
    display: inline-block;
    width: 20%;
    background-color: #FFFFFF;
    vertical-align:top;
}

.selected {
    background: #FFFFFF;
    width: 100%;
    height: 50px;
    border-left: 5px solid orangered;
}

.unselected {
    background: #eeeeee;
    width: 100%;
    height: 50px;
}

.left-menu-cell {
    margin-left: 5px;
    height: 50px;
    line-height: 50px;
    font-size: 12px;
}

#main-tableView {
    width: 80%;
    height: 580px;
    background-color: #FFFFFF;
    float: right;
}

.sectionHeader {
    width: 100%;
    height: 30px;
    background-color: #eeeeee;
}

.sectionHeader text {
    margin-left: 5px;
    font-size: 12px;
    height: 30px;
    line-height: 30px;
}

.cell-view {
    border-bottom: 1px solid #ccc;
    margin-left: 10px;
}

.cell-thumbImage {
    width: 86%;
    height: 86%;
    margin: 7% 7% 7% 0;

}

.cell-left-view {
    display: inline-block;
    width: 35%;
    height: 100px;
}

.cell-right-view {
    float: right;
    width: 63%;
    height: 100px;
    padding-left: 2%;
}

.cell-name {
    display: block;
    margin-top: 10px;
    font-size: 14px;
    font-weight: bold;
}

.cell-desc {
    display: block;
    margin-top: 8px;
    font-size: 12px;
    color: #ccc;
}

.cell-sold {
    margin-top: 8px;
    font-size: 12px;
    color: #ccc;
}

.cell-rate {
    margin-left: 20px;
    margin-top: 8px;
    font-size: 12px;
    color: #ccc;
}

.cell-last {
    margin-top: 8px;
}

.cell-price {
    color: darkorange;
    font-size: 14px;
    font-weight: bold;
    height: 20px;
    line-height: 20px;
}
