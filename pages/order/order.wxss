/*stepper容器*/
.stepper {
    width: 160rpx;
    height: 40rpx;
    float: right;
}

/*数值*/
.stepper text {
    float: left;
    width: 60rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
}

.stepper image {
    width: 40rpx;
    height: 40rpx;
    float: left;
}

/*普通样式*/
.stepper .normal {
    visibility: visible;
}

/*禁用样式*/
.stepper .disabled {
    visibility: hidden;
}

#left-menu-tableView {
    display: inline-block;
    width: 20%;
    background-color: #FFFFFF;
    vertical-align:top;
}

.selected {
    background: #FFFFFF;
    width: 100%;
    height: 100rpx;
    border-left: 10rpx solid orangered;
}

.unselected {
    background: #eeeeee;
    width: 100%;
    height: 100rpx;
}

.left-menu-cell {
    margin-left: 10rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 24rpx;
}

#main-tableView {
    width: 80%;
    height: 1160rpx;
    background-color: #FFFFFF;
    float: right;
}

.sectionHeader {
    width: 100%;
    height: 60rpx;
    background-color: #eeeeee;
}

.sectionHeader text {
    margin-left: 10rpx;
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.cell-view {
    border-bottom: 2rpx solid #ccc;
    margin-left: 20rpx;
}

.cell-thumbImage {
    width: 86%;
    height: 86%;
    margin: 7% 7% 7% 0;

}

.cell-left-view {
    display: inline-block;
    width: 35%;
    height: 200rpx;
}

.cell-right-view {
    float: right;
    width: 63%;
    height: 200rpx;
    padding-left: 2%;
}

.cell-name {
    display: block;
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.cell-desc {
    display: block;
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #ccc;
}

.cell-sold {
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #ccc;
}

.cell-rate {
    margin-left: 40rpx;
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #ccc;
}

.cell-last {
    margin-top: 16rpx;
}

.cell-price {
    color: darkorange;
    font-size: 28rpx;
    font-weight: bold;
    height: 40rpx;
    line-height: 40rpx;
}
